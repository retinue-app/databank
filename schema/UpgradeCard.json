{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://schema.retinue.app/UpgradeCard.json",
  "title": "UpgradeCard",

  "description": "Defines an upgrade card.",
  "additionalProperties": false,

  "properties": {
    "name": {
      "description": "Name of the upgrade.",
      "type": "string",
      "minLength": 3,
      "maxLength": 40
    },

    "description": {
      "type": "string",
      "minLength": 3,
      "maxLength": 300
    },

    "keywords": {
      "$ref": "./UpgradeKeywords.json"
    },

    "action": {
      "$ref": "./CardAction.json"
    },

    "usage": {
      "enum": ["Detonate", "Discard", "Exhaust"]
    },

    "type": {
      "$ref": "./UpgradeType.json"
    },

    "restrictions": {
      "$ref": "./TargetSet.json"
    },

    "restrictionsNot": {
      "$ref": "./TargetSet.json"
    },

    "points": {
      "type": "number",
      "minimum": 0
    },

    "weapon": {
      "$ref": "./Weapon.json"
    }
  },

  "required": ["name", "type", "points"]
}
