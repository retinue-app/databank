{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://schema.retinue.app/UpgradeKeywordSet.json",
  "title": "UpgradeKeywordSet",
  "description": "A set of keywords that provide a passive effect for a specific upgrade/model.",

  "properties": {
    "Cycle": {
      "type": "null"
    },

    "Leader": {
      "type": "null"
    },

    "Noncombatant": {
      "type": "null"
    },

    "Reconfigure": {
      "type": "string"
    },

    "Sidearm": {
      "enum": ["Melee", "Ranged"]
    },

    "Small": {
      "type": "null"
    }
  },

  "additionalProperties": {
    "anyOf": [
      { "type": "null", "tsType": "undefined " },
      { "type": "number" },
      { "type": "string" }
    ]
  }
}
